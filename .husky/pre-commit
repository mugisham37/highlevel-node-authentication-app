#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged
pnpm lint-staged

# Check if there are any staged changes after linting
if ! git diff --cached --quiet; then
  echo "âœ… Pre-commit checks passed"
else
  echo "âŒ No staged changes found after linting"
  exit 1
fi