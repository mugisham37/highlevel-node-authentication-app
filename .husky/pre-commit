#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged
pnpm lint-staged

# Check if there are any staged changes after linting
if ! git diff --cached --quiet; then
  echo "✅ Pre-commit checks passed"
else
  echo "❌ No staged changes found after linting"
  exit 1
fi