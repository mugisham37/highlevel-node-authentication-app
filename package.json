{
  "name": "@company/fullstack-monolith",
  "version": "1.0.0",
  "description": "Fullstack monolith with shared packages and multiple applications",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*",
    "infrastructure/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:affected": "turbo run build --filter='...[HEAD^1]'",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:cache": "turbo run clean",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "db:studio": "turbo run db:studio",
    "setup": "pnpm install && pnpm run build && pnpm run db:migrate && pnpm run db:seed",
    "start": "turbo run start",
    "start:prod": "turbo run start:prod",
    "deploy": "turbo run deploy",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "generate": "plop --plopfile tools/generators/plopfile.js",
    "security:audit": "./tools/scripts/security.sh audit",
    "security:scan": "./tools/scripts/security.sh scan",
    "format:check": "./tools/scripts/format.sh format",
    "format:fix": "./tools/scripts/format.sh format fix",
    "quality:check": "./tools/scripts/format.sh all",
    "quality:fix": "./tools/scripts/format.sh all fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "detox": "^20.13.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "plop": "^4.0.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
