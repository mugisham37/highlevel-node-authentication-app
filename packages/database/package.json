{
  "name": "@company/database",
  "version": "1.0.0",
  "description": "Database layer with dual ORM support (Prisma and Drizzle)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seeds/index.ts",
    "db:reset": "npm run prisma:reset && npm run db:seed"
  },
  "dependencies": {
    "prisma": "^5.20.0",
    "@prisma/client": "^5.20.0",
    "drizzle-orm": "^0.33.0",
    "drizzle-kit": "^0.24.0",
    "pg": "^8.12.0",
    "@types/pg": "^8.11.8",
    "@company/shared": "workspace:*",
    "@company/config": "workspace:*",
    "zod": "^3.23.8",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "tsx": "^4.19.0",
    "rimraf": "^6.0.1",
    "@types/node": "^22.5.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js",
      "require": "./dist/repositories/index.js"
    },
    "./migrations": {
      "types": "./dist/migrations/index.d.ts",
      "import": "./dist/migrations/index.js",
      "require": "./dist/migrations/index.js"
    },
    "./seeds": {
      "types": "./dist/seeds/index.d.ts",
      "import": "./dist/seeds/index.js",
      "require": "./dist/seeds/index.js"
    }
  },
  "files": [
    "dist",
    "prisma",
    "README.md"
  ],
  "keywords": [
    "database",
    "prisma",
    "drizzle",
    "orm",
    "postgresql",
    "typescript"
  ],
  "author": "Company",
  "license": "MIT"
}