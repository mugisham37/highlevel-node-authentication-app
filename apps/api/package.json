{
  "name": "enterprise-auth-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication backend with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:setup": "tsx src/infrastructure/database/setup.ts",
    "db:test": "tsx src/infrastructure/database/example.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:cli": "tsx src/infrastructure/database/cli/db-cli.ts",
    "db:migrate:up": "npm run db:cli migrate up",
    "db:migrate:down": "npm run db:cli migrate down",
    "db:migrate:status": "npm run db:cli migrate status",
    "db:seed": "npm run db:cli seed run",
    "db:seed:status": "npm run db:cli seed status",
    "db:validate": "npm run db:cli validate",
    "db:reset": "npm run db:cli reset --confirm",
    "backup:cli": "tsx src/infrastructure/backup/cli/backup-cli.ts",
    "backup:full": "npm run backup:cli backup full",
    "backup:incremental": "npm run backup:cli backup incremental",
    "backup:list": "npm run backup:cli backup list",
    "backup:cleanup": "npm run backup:cli backup cleanup",
    "backup:test": "npm run backup:cli backup test"
  },
  "keywords": [
    "authentication",
    "enterprise",
    "nodejs",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@company/shared": "workspace:*",
    "@company/database": "workspace:*",
    "@company/auth": "workspace:*",
    "@company/config": "workspace:*",
    "@company/cache": "workspace:*",
    "@company/logger": "workspace:*",
    "@company/notifications": "workspace:*",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/websocket": "^11.2.0",
    "fastify": "^4.24.3",
    "prom-client": "^15.1.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "@types/argon2": "^0.14.1",
    "@types/chokidar": "^1.7.5",
    "@types/crypto-js": "^4.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
