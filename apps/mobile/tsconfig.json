{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@company/shared": ["../../packages/shared/src"],
      "@company/shared/*": ["../../packages/shared/src/*"],
      "@company/api-contracts": ["../../packages/api-contracts/src"],
      "@company/api-contracts/*": ["../../packages/api-contracts/src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src/**/*", "index.js", "__tests__/**/*", "jest.setup.js"],
  "exclude": ["node_modules", "android", "ios", "dist", "coverage"]
}
